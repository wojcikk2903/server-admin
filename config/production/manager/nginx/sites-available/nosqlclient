upstream nosqlclient {
    server 0.0.0.0:3000;
}

server {
    listen 80;
    server_name manager.nclab.com;
    return 301 https://manager.nclab.com/$request_uri;
}

server {
    listen 443 ssl;
    server_name manager.nclab.com;

    ssl_stapling on;
    ssl_stapling_verify on;

    ssl_certificate        /etc/ssl/certs/STAR_nclab_com.crt;
    ssl_certificate_key    /etc/ssl/private/STAR_nclab_com.key;

    add_header Strict-Transport-Security max-age=31536000;

    location / {
        proxy_http_version 1.1;
	auth_basic      "Restricted";
        auth_basic_user_file    /etc/nginx/htpasswd;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        proxy_pass http://nosqlclient;
    }
}
